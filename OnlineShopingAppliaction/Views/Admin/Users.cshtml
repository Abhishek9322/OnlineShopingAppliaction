@model IEnumerable<OnlineShopingAppliaction.Models.AppUser>
@{
    ViewData["Title"] = "Manage Users";
    string currentAdmin = ViewBag.CurrentAdmin as string;
}

<div class="container mt-4">
    <h2 class="mb-4 text-center text-dark">Manage Users</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert" id="alertMessage">
            @TempData["Error"]
        </div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert" id="alertMessage">
            @TempData["Success"]
        </div>
    }
    <table class="table table-bordered table-hover shadow">
        <thead style="background-color: #9AA6B2; color: #9AA6B2;">
            <tr>
                <th>👤 Username</th>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>
                        @if (user.UserName == currentAdmin)
                        {
                            <span class="badge bg-secondary">🔒 Cannot Delete Yourself</span>
                        }
                        else
                        {
                            <form asp-action="DeleteUser" asp-controller="Admin" method="post"
                                  onsubmit="return confirm('Are you sure you want to delete this user?');">
                                <input type="hidden" name="id" value="@user.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">🗑 </button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">⬅ Back to Home</a>
</div>

<script>
    // Auto-hide alert after 3 seconds
    setTimeout(() => {
        let alertBox = document.getElementById("alertMessage");
        if (alertBox) {
            alertBox.classList.remove("show");
            alertBox.classList.add("fade");
        }
    }, 3000);
</script>

<style>
    table tr:hover {
        background: #f9f9f9;
        transition: background 0.3s ease;
    }

    h2 {
        font-weight: bold;
    }
</style>
