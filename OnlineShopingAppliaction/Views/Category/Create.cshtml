@model OnlineShopingAppliaction.Models.Category
@{
    ViewData["Title"] = "Create Category";
}


<style>
    .btn-sm {
        border-radius: 8px;
        font-size: 0.85rem;
    }
</style>

<div class="container mt-4">
    <h2 class="fw-bold">Add New Category</h2>

    @* Debug Section: Show errors *@
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <form asp-action="Create" method="post" class="card p-4 shadow">
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mt-3 d-flex gap-2">
            <button type="submit" class="btn btn-success btn-sm px-3" style="background-color:#91C8E4; color:#000; border:none; border-radius:0.5rem;">
                Save
            </button>
            <a asp-action="Index" class="btn btn-secondary btn-sm px-3">
                Back
            </a>
        </div>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
        }

