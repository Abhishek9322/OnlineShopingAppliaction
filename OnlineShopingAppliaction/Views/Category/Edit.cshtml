@model OnlineShopingAppliaction.Models.Category
@{
    ViewData["Title"] = "Edit Category";
}

<style>
    .btn-sm {
        border-radius: 8px;
        font-size: 0.85rem;
    }
</style>


<div class="container mt-4">
    <h2 class="fw-bold">Edit Category</h2>

    <form asp-action="Edit" method="post" class="card p-4 shadow">
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label class="form-label">Category Name</label>
            <input asp-for="Name" class="form-control" required minlength="3" maxlength="50" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mt-3 d-flex gap-2">
            <button type="submit" class="btn btn-success btn-sm px-3">
                Update
            </button>
            <a asp-action="Index" class="btn btn-secondary btn-sm px-3">
                Back
            </a>
        </div>
    </form>
</div>
