@model IEnumerable<OnlineShopingAppliaction.Models.Category>
@{
    ViewData["Title"] = "Home";
}

<!-- Banner Carousel -->
<div id="homeCarousel" class="carousel slide mb-5" data-bs-ride="carousel">
    <div class="carousel-inner">

        <!-- Slide 1 -->
        <div class="carousel-item active">
            <section class="about-hero d-flex align-items-center position-relative"
                     style="background: url('@Url.Content("~/Images/E Commerce1.png")') center/cover no-repeat; height: 300px;">
                <div class="overlay"></div>
            </section>
        </div>

        <!-- Slide 2 -->
        <div class="carousel-item">
            <section class="about-hero d-flex align-items-center position-relative"
                     style="background: url('@Url.Content("~/Images/E Commerce 4.jpg")') center/cover no-repeat; height: 300px;">
                <div class="overlay"></div>
            </section>
        </div>

        <!-- Slide 3 -->
        <div class="carousel-item">
            <section class="about-hero d-flex align-items-center position-relative"
                     style="background: url('@Url.Content("~/Images/ei2.jpg")') center/cover no-repeat; height: 300px;">
                <div class="overlay"></div>
            </section>
        </div>

        <!-- Slide 4 -->
        <div class="carousel-item">
            <section class="about-hero d-flex align-items-center position-relative"
                     style="background: url('@Url.Content("~/Images/E Commerce 3.webp")') center/cover no-repeat; height: 300px;">
                <div class="overlay"></div>
            </section>
        </div>
    </div>

    <!-- Carousel Controls -->
    <button class="carousel-control-prev" type="button" data-bs-target="#homeCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#homeCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
        <span class="visually-hidden">Next</span>
    </button>

    <!-- Carousel Indicators -->
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="2"></button>
        <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="3"></button>
    </div>
</div>

<!-- Categories -->
<div class="container">
    @foreach (var category in Model)
    {
        <h3 class="mb-4 fw-bold text-dark border-bottom pb-2">@category.Name</h3>

        <div class="row g-4">
            @foreach (var p in category.Products.Take(3))
            {
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="card product-card h-100 position-relative">
                        <a href="/Product/Details/@p.Id">
                            <img src="@Url.Content(p.ImagePath)" alt="@p.Name" class="product-img" />
                            @if (p.Stock == 0)
                            {
                                <div class="out-of-stock-overlay">Out of Stock</div>
                            }
                        </a>
                        <div class="card-body text-center p-3">
                            <h6 class="card-title mb-1">@p.Name</h6>
                            <p class="product-price mb-2">₹@p.Price</p>

                            @if (p.Stock > 0)
                            {
                                <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                    <input type="hidden" name="productId" value="@p.Id" />
                                    <input type="hidden" name="quantity" value="1" />
                                    <button type="submit" class="btn btn-sm btn-success w-100">Add To Cart 🛒</button>
                                </form>
                            }
                            else
                            {
                                <button class="btn btn-sm btn-secondary w-100" disabled>Out of Stock</button>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Carousel for remaining products -->
        @if (category.Products.Count > 3)
        {
            var remainingProducts = category.Products.Skip(3).ToList();
            int chunkSize = 3;
            int totalChunks = (int)Math.Ceiling((double)remainingProducts.Count / chunkSize);

            <div id="carousel-@category.Name.Replace(" ", "")" class="carousel slide mt-4" data-bs-ride="carousel" data-bs-interval="3000">
                <div class="carousel-inner">
                    @for (int i = 0; i < totalChunks; i++)
                    {
                        var chunk = remainingProducts.Skip(i * chunkSize).Take(chunkSize).ToList();
                        <div class="carousel-item @(i == 0 ? "active" : "")">
                            <div class="row justify-content-center g-4">
                                @foreach (var p in chunk)
                                {
                                    <div class="col-lg-4 col-md-6 col-sm-6">
                                        <div class="card product-card h-100 position-relative">
                                            <a href="/Product/Details/@p.Id">
                                                <img src="@Url.Content(p.ImagePath)" alt="@p.Name" class="product-img" />
                                                @if (p.Stock == 0)
                                                {
                                                    <div class="out-of-stock-overlay">Out of Stock</div>
                                                }
                                            </a>
                                            <div class="card-body text-center p-3">
                                                <h6 class="card-title mb-1">@p.Name</h6>
                                                <p class="product-price mb-2">₹@p.Price</p>

                                                @if (p.Stock > 0)
                                                {
                                                    <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                                        <input type="hidden" name="productId" value="@p.Id" />
                                                        <input type="hidden" name="quantity" value="1" />
                                                        <button type="submit" class="btn btn-sm btn-success w-100">Add To Cart 🛒</button>
                                                    </form>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-sm btn-secondary w-100" disabled>Out of Stock</button>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>

                <!-- Carousel Controls -->
                <button class="carousel-control-prev" type="button" data-bs-target="#carousel-@category.Name.Replace(" ", "")" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carousel-@category.Name.Replace(" ", "")" data-bs-slide="next">
                    <span class="carousel-control-next-icon"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        }
    }
</div>

<style>
    .product-img {
        width: 100%;
        height: 200px;
        object-fit: contain;
        background-color: #f9f9f9;
        padding: 10px;
        border-radius: 8px 8px 0 0;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .product-img:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
        }

    .product-card {
        border-radius: 10px;
        background: #fff;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        position: relative;
        transition: transform 0.2s ease, box-shadow 0.3s ease;
    }

        .product-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }

    .product-price {
        font-size: 1rem;
        color: #28a745;
        font-weight: 600;
    }

    .out-of-stock-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(220, 53, 69, 0.7);
        color: #fff;
        font-weight: bold;
        font-size: 1.2rem;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px 8px 0 0;
        z-index: 10;
        text-transform: uppercase;
    }
</style>
