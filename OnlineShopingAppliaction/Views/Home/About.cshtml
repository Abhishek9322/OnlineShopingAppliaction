@{
    ViewData["Title"] = "About Us";
}

<!-- Hero Section -->
<section class="about-hero d-flex align-items-center text-center text-dark"
         style="background: url('@Url.Content("~/Images/E Commerce1.png")') center/cover no-repeat; height: 300px;">
    <div class="container">
        <h1 class="fw-bold">About Us</h1>
        <p class="lead">Your trusted partner for online shopping excellence.</p>
    </div>
</section>

<!-- About Company -->
<section class="py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 mb-4 mb-md-0">
                <img src="/Images/E commerce 2.jpg" class="img-fluid rounded shadow" alt="About Our Company">
            </div>
            <div class="col-md-6">
                <h2 class="fw-bold mb-3">Who We Are</h2>
                <p>
                    Welcome to <strong>OnlineShopping</strong>, your go-to destination for the latest in fashion, electronics, and home essentials.
                    Since our launch, we’ve been committed to providing our customers with high-quality products, unbeatable prices, and a seamless shopping experience.
                </p>
                <p>
                    Our team works tirelessly to bring you a curated selection of top products, fast delivery, and outstanding customer service.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Mission & Vision -->
<section class="py-5 bg-light">
    <div class="container text-center">
        <h2 class="fw-bold mb-4">Our Mission & Vision</h2>
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="p-4 border rounded shadow-sm h-100">
                    <h4 class="fw-bold">Our Mission</h4>
                    <p>
                        To make online shopping easy, affordable, and enjoyable for everyone by offering quality products and top-notch customer service.
                    </p>
                </div>
            </div>
            <div class="col-md-6 mb-4">
                <div class="p-4 border rounded shadow-sm h-100">
                    <h4 class="fw-bold">Our Vision</h4>
                    <p>
                        To be the leading e-commerce platform that customers trust for all their shopping needs, built on a foundation of innovation and integrity.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Why Choose Us -->
<section class="py-5">
    <div class="container text-center">
        <h2 class="fw-bold mb-4">Why Choose Us?</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="p-4 border rounded shadow-sm h-100">
                    <i class="bi bi-truck fs-1 text-primary mb-3"></i>
                    <h5 class="fw-bold">Fast Delivery</h5>
                    <p>Get your products delivered quickly and safely, right to your doorstep.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="p-4 border rounded shadow-sm h-100">
                    <i class="bi bi-shield-check fs-1 text-primary mb-3"></i>
                    <h5 class="fw-bold">Secure Payments</h5>
                    <p>We offer safe and secure payment options to protect your transactions.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="p-4 border rounded shadow-sm h-100">
                    <i class="bi bi-star fs-1 text-primary mb-3"></i>
                    <h5 class="fw-bold">Quality Products</h5>
                    <p>Our products are carefully selected to ensure the best quality for you.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
