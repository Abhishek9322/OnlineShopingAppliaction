@model IEnumerable<OnlineShopingAppliaction.Models.Product>
<h2>Products</h2>
<table class="table table-bordered">
    <tr><th>Name</th><th>Description</th><th>Price</th><th>Discount</th><th>Action</th></tr>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.Name</td>
            <td>@p.Description</td>
            <td>@p.Price</td>
            <td>@p.Discount %</td>
            <td><a class="btn btn-success" href="/Cart/AddToCart?productId=@p.Id">Add to Cart</a></td>
        </tr>
    }
</table>
<a class="btn btn-primary" href="/Cart">Go to Cart</a>