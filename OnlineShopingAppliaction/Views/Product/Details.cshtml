@model OnlineShopingAppliaction.Models.Product
@{
    ViewData["Title"] = "Product Details";
    var related = ViewBag.RelatedProducts as List<OnlineShopingAppliaction.Models.Product>;
}

<div class="container mt-4">
    <div class="row">
        <!-- Product Image -->
        <div class="col-md-5">
            <img src="@Model.ImagePath" class="img-fluid rounded shadow" alt="@Model.Name">
        </div>

        <!-- Product Details -->
        <div class="col-md-7">
            <h2 class="fw-bold">@Model.Name</h2>
            <h5 class="text-muted">Category: @Model.Category?.Name</h5>
            <p class="mt-3">@Model.Description</p>
            <h4 class="text-success fw-bold">₹@Model.Price</h4>

            @if (Model.Discount > 0)
            {
                <span class="badge bg-success">Discount @Model.Discount% OFF</span>
            }

            <a href="/Cart/AddToCart?productId=@Model.Id" class="btn btn-dark btn-lg mt-3">🛒 Add to Cart</a>
            <a href="/Product/Index" class="btn btn-secondary btn-lg mt-3">⬅ Back</a>
        </div>
    </div>

    <!-- Related Products -->
    @if (related != null && related.Any())
    {
        <h3 class="mt-5">🔗 Related Products</h3>
        <div id="relatedCarousel" class="carousel slide mt-3" data-bs-ride="carousel">
            <div class="carousel-inner">
                @{
                    int totalProducts = related.Count;
                    int productsPerSlide = 3;
                    int slideIndex = 0;

                    for (int i = 0; i < totalProducts; i += productsPerSlide)
                    {
                        var productsGroup = related.Skip(i).Take(productsPerSlide).ToList();
                        <div class="carousel-item @(slideIndex == 0 ? "active" : "")">
                            <div class="row justify-content-center">
                                @foreach (var product in productsGroup)
                                {
                                    <div class="col-md-3 col-sm-6 mb-3">
                                        <div class="card shadow-sm h-100">
                                            <img src="@product.ImagePath" class="card-img-top" alt="@product.Name" style="height:200px;object-fit:cover;">
                                            <div class="card-body text-center">
                                                <h6>@product.Name</h6>
                                                <p class="text-muted mb-1">₹@product.Price</p>
                                                <a href="/Product/Details/@product.Id" class="btn btn-outline-primary btn-sm">View</a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                        slideIndex++;
                    }
                }
            </div>

            <!-- Controls -->
            <button class="carousel-control-prev" type="button" data-bs-target="#relatedCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#relatedCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>
    }
</div>
