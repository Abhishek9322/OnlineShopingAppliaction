@model CheckoutViewModel
@{
    ViewData["Title"] = "Checkout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-7">
            <div class="card p-4 shadow-sm">
                <h4 class="mb-3">Shipping Information</h4>

                <form asp-action="Checkout" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="CartItemId" value="@Model.CartItemId" />

                    <!-- Full Name -->
                    <div class="mb-2">
                        <label asp-for="ShippingFullName" class="form-label"></label>
                        <input asp-for="ShippingFullName" class="form-control" required
                               oninput="this.value=this.value.replace(/[^A-Za-z\s]/g,'')" />
                        <span asp-validation-for="ShippingFullName" class="text-danger"></span>
                    </div>

                    <!-- Phone -->
                    <div class="mb-2">
                        <label asp-for="ShippingPhone" class="form-label"></label>
                        <input asp-for="ShippingPhone" class="form-control" required maxlength="10"
                               oninput="this.value=this.value.replace(/[^0-9]/g,'')" />
                        <span asp-validation-for="ShippingPhone" class="text-danger"></span>
                    </div>

                    <!-- Address Line 1 -->
                    <div class="mb-2">
                        <label asp-for="ShippingAddressLine1" class="form-label"></label>
                        <input asp-for="ShippingAddressLine1" class="form-control" required />
                        <span asp-validation-for="ShippingAddressLine1" class="text-danger"></span>
                    </div>

                    <!-- Address Line 2 -->
                    <div class="mb-2">
                        <label asp-for="ShippingAddressLine2" class="form-label"></label>
                        <input asp-for="ShippingAddressLine2" class="form-control" />
                        <span asp-validation-for="ShippingAddressLine2" class="text-danger"></span>
                    </div>

                    <!-- City & State -->
                    <div class="row">
                        <div class="col-md-6 mb-2">
                            <label asp-for="ShippingCity" class="form-label"></label>
                            <input asp-for="ShippingCity" class="form-control" required
                                   oninput="this.value=this.value.replace(/[^A-Za-z\s]/g,'')" />
                            <span asp-validation-for="ShippingCity" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-2">
                            <label asp-for="ShippingState" class="form-label"></label>
                            <input asp-for="ShippingState" class="form-control" required
                                   oninput="this.value=this.value.replace(/[^A-Za-z\s]/g,'')" />
                            <span asp-validation-for="ShippingState" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Pincode & Country -->
                    <div class="row">
                        <div class="col-md-6 mb-2">
                            <label asp-for="ShippingPincode" class="form-label"></label>
                            <input asp-for="ShippingPincode" class="form-control"
                                   maxlength="6" minlength="6"
                                   oninput="this.value=this.value.replace(/[^0-9]/g,'').slice(0,6)" />
                            <span asp-validation-for="ShippingPincode" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-2">
                            <label asp-for="ShippingCountry" class="form-label"></label>
                            <input asp-for="ShippingCountry" class="form-control" required
                                   oninput="this.value=this.value.replace(/[^A-Za-z\s]/g,'')" />
                            <span asp-validation-for="ShippingCountry" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Notes -->
                    <div class="mb-3">
                        <label asp-for="ShippingNotes" class="form-label"></label>
                        <textarea asp-for="ShippingNotes" class="form-control"></textarea>
                        <span asp-validation-for="ShippingNotes" class="text-danger"></span>
                    </div>

                    <!-- Buttons -->
                    <button type="submit" class="btn btn-success">Confirm & Place Order</button>
                    <a asp-controller="Cart" asp-action="Index" class="btn btn-secondary ms-2">Back to Cart</a>
                </form>
            </div>
        </div>

        <!-- Order Summary -->
        <div class="col-md-5">
            <div class="card p-3 shadow-sm">
                <h5>Order Summary</h5>
                <hr />
                @foreach (var item in Model.Items)
                {
                    <div class="d-flex mb-2">
                        <img src="@item.Product.ImagePath" style="width:70px;height:70px;object-fit:cover;border-radius:8px" />
                        <div class="ms-3 flex-grow-1">
                            <div class="fw-bold">@item.Product.Name</div>
                            <div class="text-muted">Qty: @item.Quantity</div>
                            <div class="text-muted">Price: ₹@item.Product.Price</div>
                        </div>
                        <div class="text-end">₹@(item.Product.Price * item.Quantity)</div>
                    </div>
                }

                <hr />
                <div class="d-flex justify-content-between">
                    <div>Subtotal</div>
                    <div>₹@Model.Subtotal</div>
                </div>
                <div class="d-flex justify-content-between">
                    <div>Discount</div>
                    <div class="text-success">- ₹@Model.Discount</div>
                </div>
                <div class="d-flex justify-content-between fw-bold border-top pt-2">
                    <div>Total</div>
                    <div>₹@Model.FinalTotal</div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
